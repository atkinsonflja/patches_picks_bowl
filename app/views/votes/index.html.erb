<% if signed_in? %>
  <div class="maincontent">
  <center><h2>Week</h2></center>
    <div style="margin: 0 auto; display: block; text-align: center;">
      <hr id="contenttitlebar" />

      <table>
        <thead>
          <tr>
            <th>Game</th>
            <th>Pick</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @votes.each do |vote| %>
            <tr>
              <td><%= vote.game_id %></td>
              <td><%= vote.pick %></td>
              <td><%= link_to 'Show', vote %></td>
              <td><%= link_to 'Edit', edit_vote_path(vote) %></td>
              <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Vote', new_vote_path %>
    </div>
  </div>
<% end %>