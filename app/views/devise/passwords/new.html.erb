<div>
	<img src="../../assets/duoone.png" id="mainduoone" class="margintop" alt="Duo One" width="" height="" />
</div>
	<div class="maincontent">
		<center><h2>Forgot your password?</h2></center>
		<div style="margin: 0 auto; display: block; text-align: center;">
			<hr id="contenttitlebar" />
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div><%= f.label :email %><br />
			  <%= f.email_field :email, autofocus: true %></div>

			  <div><%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg active btn-block" %></div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
	</div>
