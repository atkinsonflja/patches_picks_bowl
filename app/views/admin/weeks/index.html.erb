<h1>Listing weeks</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weeks.each do |week| %>
      <tr>
        <td><%= week.number %></td>
        <td><%= link_to 'Show', [:admin, week] %></td>
        <td><%= link_to 'Edit', edit_admin_week_path(week) %></td>
        <td><%= link_to 'Destroy', [:admin, week], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Week', new_admin_week_path %>
