<h1>Listing games</h1>

<table>
  <thead>
    <tr>
      <th>Week</th>
      <th>Home</th>
      <th>Away</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.week.try(:number) %></td>
        <td><%= game.home_team.try(:name) %></td>
        <td><%= game.away_team.try(:name) %></td>
        <td><%= link_to 'Show', [:admin, game] %></td>
        <td><%= link_to 'Edit', edit_admin_game_path(game) %></td>
        <td><%= link_to 'Destroy', [:admin, game], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

